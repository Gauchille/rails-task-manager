<div class="container mb-3">
  <h1 class="mb-5">My tasks</h1>
  <ul class="list-group list-group-flush">
    <% @tasks.each do |task| %>
      <li class="list-group-item p-3">
        <%= link_to task.title, task_path(task), :class =>"text-decoration-none" %>
        <%= link_to task, data: {turbo_method: :delete, turbo_confirm: "Do you really wanna delete it ?" } do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
      </li>
    <% end %>
  </ul>
  <%= link_to "create a new task", new_task_path, class:"btn btn-primary mt-5"%>
</div>
